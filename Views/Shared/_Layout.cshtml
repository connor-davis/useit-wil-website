<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Use-IT - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        .frosted-glass {
            background: rgba(5, 46, 22, 0.9) !important; /* Semi-transparent white */
            backdrop-filter: blur(10px) !important; /* Apply blur effect to background */
            -webkit-backdrop-filter: blur(10px) !important; /* Safari fix */
        }

        .sticky-navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 10;
        }

        /* Initial solid green color (green-900) */
        .initial-green {
            background-color: #14532d; /* Tailwind's green-900 hex */
        }
    </style>
</head>
<body>
    <div id="navbar-background" class="initial-green">
        <nav class="flex items-center justify-between flex-wrap p-6 bg-transparent">
            <div class="flex items-center flex-shrink-0 text-white space-x-3">
                <img src="~/assets/logo.png" width="32" height="32" />
                <span class="font-semibold text-xl tracking-tight">Use-IT</span>
            </div>
            <div class="block lg:hidden">
                <button class="flex items-center px-3 py-2 border rounded text-green-100 border-green-400 hover:text-white hover:border-white" id="navbar-btn">
                    <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <title>Menu</title>
                        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
                    </svg>
                </button>
            </div>
            <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto " id="navbar">
                <div class="text-sm lg:flex-grow  text-center lg:text-right">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="block mt-4 lg:inline-block lg:mt-0 text-green-100 hover:text-white mr-4 text-lg">
                        Home
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Story"
                       class="block mt-4 lg:inline-block lg:mt-0 text-green-100 hover:text-white mr-4 text-lg">
                        Our Story
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Projects"
                       class="block mt-4 lg:inline-block lg:mt-0 text-green-100 hover:text-white mr-4 text-lg">
                        Our Projects
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Media"
                       class="block mt-4 lg:inline-block lg:mt-0 text-green-100 hover:text-white mr-4 text-lg">
                        Media
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="Contact"
                       class="block mt-4 lg:inline-block lg:mt-0 text-green-100 hover:text-white mr-4 text-lg">
                        Contact Us
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <div class="flex flex-col">
        @RenderBody()
    </div>

    <div class="flex flex-col w-full h-auto bg-neutral-950 text-white">
        <div class="grid grid-cols-1 lg:grid-cols-3 p-5 gap-5">
            <div class="flex flex-col w-full h-auto space-y-5">
                <div class="text-2xl">About Us</div>

                <div>USE-IT is a Non-Profit Organisation with registered PBO status with the express aim of diverting waste and creating jobs.</div>
            </div>

            <div class="flex flex-col w-full h-auto space-y-5 lg:items-center">
                <div class="text-2xl">Social Links</div>

                <div class="flex items-center space-x-5">
                    <a href="https://web.facebook.com/useitkzn" class="flex flex-col items-center justify-center p-3 bg-amber-200 rounded-full text-black"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-facebook"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" /></svg></a>
                    <a href="https://wa.me/+27670300360" class="flex flex-col items-center justify-center p-3 bg-amber-200 rounded-full text-black"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-message-circle"><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z" /></svg></a>
                    <a href="https://www.linkedin.com/company/use-it-ethekwini-waste-materials-recovery-industry-development-cluster/" class="flex flex-col items-center justify-center p-3 bg-amber-200 rounded-full text-black"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" /><rect width="4" height="12" x="2" y="9" /><circle cx="4" cy="4" r="2" /></svg></a>
                </div>
            </div>

            <div class="flex flex-col w-full h-auto space-y-5">
                <div class="text-2xl">Follow Us On Facebook</div>

                <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fweb.facebook.com%2Fuseitkzn%3Fref%3Dembed_page&amp;tabs=timeline&amp;width=380&amp;height=280&amp;small_header=true&amp;adapt_container_width=true&amp;hide_cover=false&amp;show_facepile=true&amp;appId" width="380" height="200" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowfullscreen="true" allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"></iframe>
            </div>
        </div>

        <div class="text-neutral-400 p-3 w-full">
            &copy; Copyright 2024 USE-IT Waste Benefication all rights reserved <span class="text-amber-200">|</span> Designed by SwiftTech
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            var $window = $(window);

            function checkWindowWidth() {

                var windowsize = $window.width();

                if (windowsize > 1000) {

                    $('#navbar').css('display', 'block');

                } else {

                    $('#navbar').css('display', 'none');

                }
            }

            checkWindowWidth();

            $(window).resize(checkWindowWidth);

        });


        $('#navbar-btn').click(function () {
            $('#navbar').toggle();
        });
    </script>
    <script>
        $(document).ready(function () {
            var navbar = $('#navbar');
            var navbarBackground = $("#navbar-background");
            var sticky = navbar.offset().top;

            // Reset the navbar to initial state on page load
            navbarBackground.removeClass('sticky-navbar frosted-glass').addClass('initial-green');

            // On scroll event
            $(window).scroll(function () {
                if ($(window).scrollTop() > sticky) {
                    // Apply sticky and frosted effect when scrolling past navbar
                    navbarBackground.addClass('sticky-navbar frosted-glass').removeClass('initial-green');
                } else {
                    // Reset navbar to its initial state when at the top
                    navbarBackground.removeClass('sticky-navbar frosted-glass').addClass('initial-green');
                }
            });

            // Reset on page reload or when going back to top
            $(window).on('beforeunload', function () {
                // Reset navbar before unloading the page
                navbarBackground.removeClass('sticky-navbar frosted-glass').addClass('initial-green');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
